<h1>Welcome to FoodView2!</h1>
<h2>FoodView with an async JavaScript restaurant index</h3>
<hr>
<% if user_signed_in? %>
<h3>Your Created Dishes</h3>
  <% current_user.restaurants.uniq.each do |restaurant| %>
    <li><strong><%= restaurant.name %></strong></li>
    <ul>
      <% restaurant.dishes.each do |dish| %>
          <li><%= dish.name %><br></li>
      <% end %>
    </ul>
    <% end %>
  <hr>
<% end %>
<h3>Who's Who in FoodView?</h3>  
<% @users.each do |user| %>
  <li><%= link_to "#{user.email}", user_path(user), html_options = { id: "index-link"} %></li>
  <ul>
    <li>Created Dishes: <%= user.dishes.count %></li>
    <li>Places Eaten: <%= user.restaurants.uniq.count %></li>
  </ul>
  <br>
<% end %>